{
    "version": 2,
    "name": "wallet-application",
    "builds": [
      {
        "src": "backend/index.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["backend/**/*"]
        }
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/index.js"
      },
      {
        "src": "/(.*)", 
        "dest": "/frontend/index.html"
      }
    ]
  }
  