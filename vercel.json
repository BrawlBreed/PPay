{
    "version": 2,
    "name": "my-fullstack-app",
    "builds": [
      {
        "src": "backend/index.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["backend/**/*"]
        }
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/$1"
      }
    ]
  }
  